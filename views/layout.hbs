<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet" />
  <link rel="stylesheets" href="/stylesheets/index.css" />
  <title>Get your doggos</title>
</head>

<body>
  {{#if currentUser}}
  <nav class="bg-black bg-opacity-90">
    <div class="max-w-7xl mx-auto px-2 sm:px-4 lg:px-8">
      <div class="relative flex items-center justify-between h-16">
        <div class="flex items-center px-2 lg:px-0">
          <div class="flex-shrink-0">
            <a href = "/">
            <img class="hidden lg:block h-8 w-auto"
              src="https://i.ibb.co/sqgj505/Captura-de-Pantalla-2021-12-03-a-la-s-8-49-58.png" alt="electric Dogs" />
              </a>
          </div>
          <div class="hidden lg:block lg:ml-6">
            <div class="flex space-x-4">
                <button
                  class="text-white hover:bg-blue-900 hover:text-white px-3 py-2 rounded-md text-sm font-medium">
                  <a href="/dogs/allDogs">Nuestros doggos</a></button>

                  <button
                  class="text-white hover:bg-green-800 hover:text-white px-3 py-2 rounded-md text-sm font-medium">
                  <a href="/dogs/createDog">Registrar perrito</a></button>
              

              <form action="/logout" method="POST">
                <button
                  class="text-white hover:bg-red-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium mt-4">Cerrar
                  sesión</button>
              </form>


            </div>
          </div>
        </div>

        <!-- Mobile settings -->
       
        <div class="hidden lg:block lg:ml-4">
          <a class="flex items-center" href="/user/{{currentUser.username}}"> <img class="h-8 w-8 rounded-full"
              src="{{currentUser.imageUrl}}" alt="" />
          </a>
        </div>
      </div>
    </div>
    </div>

    <!-- Mobile menu, show/hide based on menu state. -->
    <div class="lg:hidden" id="mobile-menu">
       {{#if currentUser}}
        {{else}}
      <div class="px-2 pt-2 pb-3 space-y-1">
        <!-- Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" -->
        <a href="/" class="bg-gray-900 text-white block px-3 py-2 rounded-md text-base font-medium">Home</a>
        <a href="/login"
          class="text-gray-300 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Iniciar
          sesión</a>
        <a href="/signup"
          class="text-gray-300 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Registrarse</a>
      </div>
       {{/if}}
      <div class="pt-4 pb-3 border-t border-gray-700">
        <div class="flex items-center px-5">
          <div class="flex-shrink-0">
            <img class="h-10 w-10 rounded-full"
              src="{{currentUser.imageUrl}}"
              alt="" />
          </div>
          <div class="ml-3">
            <div class="text-base font-medium text-white">{{currentUser.username}}</div>
            <div class="text-sm font-medium text-gray-400">{{currentUser.email}}</div>
          </div>
          <button type="button"
            class="ml-auto flex-shrink-0 bg-gray-800 p-1 rounded-full text-gray-400 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white">

            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9">
            </path>
            </svg>
          </button>
        </div>
        <div class="mt-3 px-2 space-y-1">
          <a href="/user/{{currentUser.username}}"
            class="block px-3 py-2 rounded-md text-base font-medium text-gray-400 hover:text-white hover:bg-gray-700">Tu
            Perfil</a>
            <a href="/dogs/allDogs"
            class="block px-3 py-2 rounded-md text-base font-medium text-gray-400 hover:text-white hover:bg-gray-700"> Nuestros doggos</a>
            <a href="/dogs/createDog"
            class="block px-3 py-2 rounded-md text-base font-medium text-gray-400 hover:text-white hover:bg-gray-700">Registrar perrito</a>
          <form action="/logout" method="POST">
            <button href="/logout"
              class="block px-3 py-2 rounded-md text-base font-medium text-gray-400 hover:text-white hover:bg-gray-700">Cerrar
              sesión</button>
          </form>
        </div>
      </div>
    </div>
  </nav>
  {{/if}}
  {{{body}}}
</body>
</html>